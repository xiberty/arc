{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__DEBUG__": true,
    "__COVERAGE__": true,
    "__BASENAME__": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "semi": [2, never],
    "comma-dangle": 0,
    "max-len": 0,
    "arrow-body-style": 0,
    "global-require": 0,
    "no-unused-expressions": 0,
    "no-confusing-arrow": 0,
    "import/no-dynamic-require": 0,
    "import/no-extraneous-dependencies": 0,
    "react/require-default-props": 0,
    "react/jsx-filename-extension": [2, {"extensions": [".js", ".jsx"]}]
  }
}
